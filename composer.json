{
    "name": "webbuilders-group/silverstripe-recipe-github-ci",
    "description": "Silverstripe Recipe for Bootstrapping a Project using GitHub Actions as a CI",
    "type": "silverstripe-recipe",
    "keywords": ["silverstripe", "testing", "behat", "phpunit", "github", "ci", "actions"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ed Chipman",
            "homepage": "https://webbuildersgroup.com",
            "role": "Developer"
        }
    ],
    "require": {
        "silverstripe/recipe-plugin": "^1.0",
        "silverstripe/recipe-cms": "~4.4",
        "phpunit/phpunit": "^5.7",
        "silverleague/ideannotator": "~3.0",
        "squizlabs/php_codesniffer": "~3.4",
        "silverstripe/behat-extension": "~4.1",
        "silverstripe/serve": "~2.1",
        "mheap/phpunit-github-actions-printer": "~1.2"
    },
    "autoload": {
        "psr-4": {
            "WebbuildersGroup\\GitHubActionsCIRecipe\\": "src/"
        }
    },
    "extra": {
        "project-files": [
            ".github/workflows/ci.yml",
            "app/tests/behat/features/.gitignore",
            "app/tests/PHPUnit/.gitignore",
            "behat.yml",
            "phpcs.xml.dist",
            "phpunit.xml.dist"
        ]
    },
    "support": {
        "issues": "https://github.com/webbuilders-group/silverstripe-github-ci-recipe/issues"
    }
}
